---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { PROVINCES, LEAVE_SCENARIOS } from '../../../data/seo-scenarios';

const title = "Browse Parental Leave Scenarios by Province & Plan | LoonieFi";
const description = "Compare Standard (12 month) vs Extended (18 month) parental leave benefits for couples and single parents across Canada. Find your EI benefit scenario.";
const canonicalURL = new URL('/calculator/parental-leave/browse', Astro.site || Astro.url.origin);
---

<BaseLayout title={title} description={description}>
  <main>
    <section class="max-w-6xl mx-auto px-4 py-12">
      <header>
        <h1 class="text-4xl font-black text-slate-900 mb-8 text-center">Browse Leave Scenarios</h1>
      </header>
    
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {PROVINCES.map((prov) => (
          <article class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:border-indigo-200 transition-colors">
            <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
              <span class="w-2 h-2 rounded-full bg-rose-500" aria-hidden="true"></span>
              {prov.name}
            </h2>
            <div class="space-y-6">
              {LEAVE_SCENARIOS.map((scene) => (
                <div>
                  <h3 class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">{scene.label}</h3>
                  <nav class="flex flex-wrap gap-2" aria-label={`${scene.label} scenarios for ${prov.name}`}>
                    <a href={`/calculator/parental-leave/${prov.slug}/${scene.slug}/30000`} class="text-xs bg-slate-50 hover:bg-rose-50 text-slate-600 hover:text-rose-600 px-2 py-1 rounded border border-slate-100 transition-colors" aria-label={`${scene.label} with $30,000 income in ${prov.name}`}>$30k</a>
                    <a href={`/calculator/parental-leave/${prov.slug}/${scene.slug}/60000`} class="text-xs bg-slate-50 hover:bg-rose-50 text-slate-600 hover:text-rose-600 px-2 py-1 rounded border border-slate-100 transition-colors" aria-label={`${scene.label} with $60,000 income in ${prov.name}`}>$60k</a>
                    <a href={`/calculator/parental-leave/${prov.slug}/${scene.slug}/90000`} class="text-xs bg-slate-50 hover:bg-rose-50 text-slate-600 hover:text-rose-600 px-2 py-1 rounded border border-slate-100 transition-colors" aria-label={`${scene.label} with $90,000 income in ${prov.name}`}>$90k</a>
                    <a href={`/calculator/parental-leave/${prov.slug}/${scene.slug}/120000`} class="text-xs bg-slate-50 hover:bg-rose-50 text-slate-600 hover:text-rose-600 px-2 py-1 rounded border border-slate-100 transition-colors" aria-label={`${scene.label} with $120,000 income in ${prov.name}`}>$120k</a>
                  </nav>
                </div>
              ))}
            </div>
          </article>
        ))}
      </div>
    </section>
  </main>
</BaseLayout>