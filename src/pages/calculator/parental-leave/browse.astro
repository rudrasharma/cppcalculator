---
// src/pages/calculators/parental-leave/browse.astro
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { PROVINCES, SALARIES } from '../../../data/seo-scenarios';

const title = "Browse Parental Leave Scenarios by Province & Salary";
const description = "Quickly find the parental leave benefit calculation for your specific province and income level.";
---

<BaseLayout title={title} description={description}>
  <section class="max-w-5xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-black text-slate-900 mb-8 text-center">Browse Scenarios</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {PROVINCES.map((prov) => (
        <div class="bg-white p-6 rounded-2xl border border-slate-200 shadow-sm hover:border-indigo-200 transition-colors">
          <h2 class="text-xl font-bold text-slate-900 mb-4 flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-indigo-500"></span>
            {prov.name}
          </h2>
          <ul class="space-y-2">
            {SALARIES.map((salary) => (
              <li>
                <a 
                  href={`/calculator/parental-leave/${prov.slug}/${salary}`}
                  class="text-sm text-slate-600 hover:text-indigo-600 hover:underline flex justify-between group"
                >
                  <span>Salary: ${salary.toLocaleString()}</span>
                  <span class="opacity-0 group-hover:opacity-100 transition-opacity">â†’</span>
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>