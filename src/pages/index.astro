---
// src/pages/index.astro
import CalculatorSuite from '../components/CalculatorSuite';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta name="viewport" content="width=device-width" />
    <title>LoonieFi | Canadian Financial Calculators (CPP, CCB, Parental Leave)</title>
    <meta name="description" content="Free calculators for Canada Pension Plan (CPP), Child Benefits (CCB), and Maternity/Parental Leave planning." />  
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans min-h-screen flex flex-col">
    
    {/* 1. WE USE CALCULATOR SUITE HERE 
      This component contains the "LoonieFi" header and the logic 
      to swap between CPP, CCB, and Parental Leave views.
    */}
    <CalculatorSuite client:load />

    {/* 2. GLOBAL FOOTER 
      Kept the 'pb-32' and inline padding-bottom style.
      This ensures your Floating Estimate Bar (in the CPP Calculator) 
      doesn't cover these links.
    */}
    <footer class="bg-white border-t border-gray-200 mt-auto pb-32" style="padding-bottom: 140px;">
      <div class="max-w-5xl mx-auto px-6 py-8 text-center">
        
        <div class="flex justify-center items-center gap-4 sm:gap-6 mb-4 font-medium text-sm">
            
            <a href="/blog" class="text-blue-600 hover:text-blue-800 transition-colors flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
                Guides & Blog
            </a>

            <span class="text-gray-300">•</span>

            <span class="text-gray-400 cursor-default" title="Data stays in your browser">Privacy First</span>

            <span class="text-gray-300">•</span>

            <a href="mailto:support@cppforecast.ca" class="text-gray-500 hover:text-blue-600 transition-colors">
                Contact
            </a>

        </div>

        <p class="text-sm text-gray-400">© {new Date().getFullYear()} Canadian Benefit Tools. All rights reserved.</p>
      </div>
    </footer>

  </body>
</html>